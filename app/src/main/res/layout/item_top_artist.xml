<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_top_artist_height">

    <ImageView
        android:id="@+id/img_top_artist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scaleType="centerCrop"/>
    <LinearLayout
        android:background="@color/primary_dark_transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/txt_name_artist_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="26sp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/text_playcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:drawableLeft="@drawable/ic_playcount"
                    android:drawableStart="@drawable/ic_playcount"
                    android:gravity="center"
                    android:textColor="@color/text"
                    />
                <TextView
                    android:id="@+id/users_listeners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_listeners"
                    android:drawableStart="@drawable/ic_listeners"
                    android:gravity="center"
                    android:textColor="@color/text"
                    />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>